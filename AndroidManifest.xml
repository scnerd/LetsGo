<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appathon.letsgo"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
            android:name="com.appathon.letsgo.LetsGo_Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appathon.letsgo.EventDetails"
            android:label="@string/title_activity_event_details" >
        </activity>
        <activity
            android:name="com.appathon.letsgo.AttendanceSelect"
            android:label="@string/title_activity_attendance_select"
            android:parentActivityName="com.appathon.letsgo.LetsGo_Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appathon.letsgo.LetsGo_Main" />
        </activity>
        <activity
            android:name="com.appathon.letsgo.AttendanceList"
            android:label="@string/title_activity_attendance_list"
            android:parentActivityName="com.appathon.letsgo.LetsGo_Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appathon.letsgo.LetsGo_Main" />
        </activity>
        <activity
            android:name="com.appathon.letsgo.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.appathon.letsgo.LetsGo_Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appathon.letsgo.LetsGo_Main" />
        </activity>
        <activity
            android:name="com.appathon.letsgo.AddEvent"
            android:label="@string/title_activity_add_event" >
        </activity>
    </application>

</manifest>
